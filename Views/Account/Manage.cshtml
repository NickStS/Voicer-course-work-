@model Voicer.Models.ManageAccountViewModel

<h2>Manage your account</h2>
<h4>Change your account settings</h4>
<hr />
<div class="row">
    <div class="col-md-3">
        <nav class="nav flex-column">
            <a class="nav-link active" asp-action="Manage">Profile</a>
            <a class="nav-link" asp-action="ChangeEmail">Email</a>
            <a class="nav-link" asp-action="ChangePassword">Password</a>
            <a class="nav-link" asp-action="TwoFactorAuthentication">Two-factor authentication</a>
            <a class="nav-link" asp-action="PersonalData">Personal data</a>
        </nav>
    </div>
    <div class="col-md-9">
        @if (ViewData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewData["Message"]
            </div>
        }
        <form asp-action="Manage" method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Save</button>
        </form>
    </div>
</div>
